<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f3f4"
    android:orientation="vertical">

    <ImageView android:id="@+id/ivPic"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="中华人民共和国是我们伟大的祖国，共有34个省级行政区：4个直辖市（北京、天津、上海、重庆）；5个自治区（内蒙古自治区、新疆维吾尔族自治区、西藏自治区、宁夏回族自治区、广西壮族自治区）；23个省（黑龙江、吉林、辽宁、山东、山西、河南、河北、陕西、青海、四川、甘肃、云南、贵州、广东、海南、福建、台湾、浙江、江苏、安徽、江西、湖南、湖北）；香港、澳门2个特别行政区"
        android:background="#fff"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff">
        <RelativeLayout android:id="@+id/tabTwoLevel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">
            <View android:id="@+id/tabTwoLevelBg"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#fc0"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="省市两级内容"/>
        </RelativeLayout>

        <RelativeLayout android:id="@+id/tabOneLevel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1">
            <View android:id="@+id/tabOneLevelBg"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#fc0"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="只看省一级"/>
        </RelativeLayout>
    </LinearLayout>

    <include android:id="@+id/layoutHeaderDateCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/complete_expandable_list_view_header_date_category" />
</LinearLayout>