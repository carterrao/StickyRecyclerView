<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="这里是footer开始"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:background="#ddd" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="中华人民共和国成立于1949年，是人民民主专政的社会主义国家。历史悠久，经历的主要朝代有：夏、商、西周、东周（春秋、战国）、秦、西汉、东汉、三国（魏、蜀、吴）、西晋、东晋、南北朝（其中北朝先后为：北魏、东魏、西魏、北齐、北周；南朝先后为：宋、齐、梁、陈）、隋、唐、五代（后梁、后唐、后晋、后汉、后周）、北宋（北方有契丹族政权辽国）、南宋（北方有女真族政权金）、元（蒙古族统治）、明、清（满族统治）"
        android:background="#fff"/>

    <ImageView android:id="@+id/ivPic"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="这里是footer结束"
        android:textStyle="bold"/>
</LinearLayout>
