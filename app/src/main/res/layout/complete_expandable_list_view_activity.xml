<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rzc.stickyrecyclerview.lib.StickyRecyclerView
        android:id="@+id/mStickyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffbb00"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="中国部分省级行政区"
            android:textColor="#fff"
            android:textSize="18dp"
            android:visibility="invisible"/>

        <include
            android:id="@+id/layoutStickyDateCategory"
            layout="@layout/complete_expandable_list_view_header_date_category"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>
